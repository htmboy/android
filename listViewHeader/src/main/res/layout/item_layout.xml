<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="60dip"
        android:layout_width="match_parent"
        android:background="@drawable/app_item_bg"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/item3_apkiv"
            android:layout_height="50dip"
            android:layout_width="50dip"
            android:background="@drawable/test_icon"
            android:layout_marginLeft="10dip"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item3_apkname"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18dip"
                android:textColor="#fff"
                android:text="应用程序名字"/>
            <TextView android:id="@+id/item3_apkinfo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14dip"
                android:text="应用程序信息"
                android:layout_marginTop="5dip"/>
        </LinearLayout>
        <Button
            android:id="@+id/item3_dlbtn"
            android:layout_height="30dip"
            android:layout_width="60dip"
            android:text="安装"
            android:layout_marginRight="10dip"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item3_apkdes"
        android:layout_height="30dip"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:textSize="14dip"
        android:text="应用程序描述"
        android:layout_marginRight="5dip"/>
</LinearLayout>
